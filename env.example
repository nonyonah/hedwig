# AgentKit Configuration
# CDP V2 API Credentials (required for CdpV2EvmWalletProvider)
CDP_API_KEY_ID=your_cdp_api_key_id
CDP_API_KEY_SECRET=your_cdp_api_secret
CDP_WALLET_SECRET=your_cdp_wallet_secret
NETWORK_ID=base-sepolia  # or 'base-mainnet' for production

# Legacy AgentKit Configuration (if still needed)
CDP_API_KEY_NAME=your_cdp_api_key_name
CDP_API_KEY_PRIVATE_KEY=your_cdp_api_private_key

# WhatsApp Configuration
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Chain Configuration
NEXT_PUBLIC_CHAIN_ID=84532  # 84532 for base-sepolia, 8453 for base-mainnet

# NextAuth Configuration (if using)
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Database Configuration (if using)
DATABASE_URL=your_database_url

# Privy Configuration
PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret

# Privy KeyQuorum Configuration
PRIVY_KEY_QUORUM_ID=your_privy_key_quorum_id
# P-256 private key for signing requests - can be raw base64 or PEM format with BEGIN/END EC PRIVATE KEY or PRIVATE KEY headers
# Generate using: node scripts/generate-privy-key-pair.js
PRIVY_AUTHORIZATION_KEY=your_privy_authorization_key

